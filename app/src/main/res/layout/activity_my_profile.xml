<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    tools:context=".MyProfileActivity">

    <ImageView
        android:id="@+id/aaronimage"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/aaronimage" />

    <TextView
        android:id="@+id/aaronname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/aaronimage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Aaron Phiri" />

    <View
        android:layout_width="match_parent"
        android:id="@+id/separator"
        app:layout_constraintTop_toBottomOf="@id/aaronname"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="2dp"
        android:background="#757575"/>

    <TextView
        android:id="@+id/track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/separator"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Track: " />
    <TextView
        android:id="@+id/trackname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/separator"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/track"
        android:text="Android " />
    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/track"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Country: " />
    <TextView
        android:id="@+id/countryname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/trackname"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/country"
        android:text="Malawi " />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/country"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Email: " />
    <TextView
        android:id="@+id/emailcontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/countryname"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/email"
        android:text="phiriaaron7@gmail.com " />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Phone: " />
    <TextView
        android:id="@+id/phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/emailcontent"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/phone"
        android:text="+265 998 645 894 " />
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toBottomOf="@id/phone"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Slack Username: " />
    <TextView
        android:id="@+id/usernamecontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/phonenumber"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/username"
        android:text="phiriaaron7@gmail.com " />
</android.support.constraint.ConstraintLayout>